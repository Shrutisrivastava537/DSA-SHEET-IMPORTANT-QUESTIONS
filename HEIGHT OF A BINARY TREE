#include<iostream>
#include<bits/stdc++.h>
using namespace std;

struct Node
{
    Node *lchild;
    int data;
    Node *rchild;
}*root=NULL;

// Creating a Binary Tree

void treecreate()
{
    Node *t,*p;
    int x;
    
    queue<Node *> q;
    cout<<"ENTER THE ROOT VALUE :";
    cin>>x;
    
    root=new Node;
    root->data=x;
    root->lchild=root->rchild=NULL;
    q.push(root);
    
    while(!q.empty())
    {
        p=q.front();
        q.pop();
        
        cout<<"ENTER LEFT CHILD 0F "<<p->data<<" : ";
        cin>>x;
        
        if(x!=-1)
        {
            t=new Node;
            t->data=x;
            t->lchild=t->rchild=NULL;
            p->lchild=t;
            q.push(t);
        }
        
        cout<<"ENTER RIGHT CHILD OF "<<p->data<<" : ";
        cin>>x;
        
        if(x!=-1)
        {
            t=new Node;
            t->data=x;
            t->lchild=t->rchild=NULL;
            p->rchild=t;
            q.push(t);
        }
    }
}



int height(Node *root)
{
    int x,y;
    
    if(root!= NULL)
    {
        x= height(root->lchild);
        y= height(root->rchild);
        
        if(x>y) 
            return x+1;
        else
          return y+1;
    }
    return 0;
}


// MAIN FUNCTION 

int main()
{
    treecreate();
    cout<<endl;
    
    int ans = height(root);
    
    cout<<ans<<" ";
    
    return 0;
}
